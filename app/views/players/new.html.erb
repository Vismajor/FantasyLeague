<%= form_for @player do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :salary %>
  <%= f.number_field :salary %>
  <br>
  <%= f.label :position %>
  <%= f.text_field :position %>
  <br>
  <% @teams = Team.all %>
  <%= f.label :team_id %>
  <%= f.select :team_id, options_from_collection_for_select(@teams, 'id', 'name') %>
  <br>
  <%= f.submit 'Player!' %>

<% end %> 